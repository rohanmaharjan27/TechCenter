<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/cardShop">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shop_layout">

            <ImageView
                android:id="@+id/sample_shop_img"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_centerHorizontal="true"
                android:transitionName="example_transition"
                />

            <TextView
                android:id="@+id/sample_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sample_shop_img"
                android:text="GameStop"
                android:textSize="@dimen/_13sdp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/sample_shop_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sample_shop_name"
                android:drawableLeft="@drawable/ic_star"
                android:text="5"
                android:textSize="@dimen/_13sdp"
                android:textColor="#000000" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>